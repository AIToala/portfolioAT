---
import LinkInline from './LinkInline.astro';
import StarIcon from './icons/Star.astro';
import CometIcon from './icons/Comet.astro';

interface Props {
	carreer: string;
	institution: string;
	location?: string;
	description: string;
	merits?: string;
	relevantCourses?: string;
	link?: string;
	date: string;
}

const { carreer, institution, location, merits, relevantCourses, description, link, date } = Astro.props;
---

<div
	class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
	<div class='relative pb-12 md:col-span-2'>
		<div class='sticky top-0'>
			<span class='text-yellow-400 -left-[42px] absolute rounded-full text-5xl'>&bull;</span>

			<h3 class='text-xl font-bold text-yellow-400'>{carreer}</h3>
			<h4 class='font-semibold text-xl text-gray-600 dark:text-white'>{institution}</h4>
			<h5 class='text-sm text-gray-600 dark:text-white'>{location}</h5>
			<time class='p-0 m-0 text-sm text-gray-600/80 dark:text-white/80'>{date}</time>
		</div>
	</div>
	<div class='relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3'>
		{description}
		{
			merits && (
				<div>
					<StarIcon />
					<h6 class='font-semibold text-sm text-gray-600 dark:text-white'>Méritos</h6>
					<p>{merits}</p>
				</div>
			)
		}
		{
			relevantCourses && (
				<div>
					<CometIcon />
					<h6 class='font-semibold text-sm text-gray-600 dark:text-white'>Cursos relevantes</h6>
					<p>{relevantCourses}</p>
				</div>
			)
		}
		{
			link && (
				<LinkInline href={link}>
					Saber más{' '}
					<svg
						xmlns='http://www.w3.org/2000/svg'
						class='w-5 icon icon-tabler icon-tabler-chevron-right'
						width='24'
						height='24'
						viewBox='0 0 24 24'
						stroke-width='2'
						stroke='currentColor'
						fill='none'
						stroke-linecap='round'
						stroke-linejoin='round'
					>
						<>
							<path stroke='none' d='M0 0h24v24H0z' fill='none' />
							<path d='M9 6l6 6l-6 6' />
						</>
					</svg>
				</LinkInline>
			)
		}
	</div>
</div>
